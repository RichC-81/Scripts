DL()
{
	find ~/downloads \-name "googlechrome.dmg" -print
}

G()
{
	find /applications \-name "Google Chrome.app" -print
}
#=========download and install============#

GC=/applications/"Google Chrome.app"

if [ "$(G)" = "$GC" ]
    then 
		exit
	else
		echo
fi

cd ~/downloads
curl -O "https://dl.google.com/chrome/mac/stable/GGRO/googlechrome.dmg"
sleep 20s


if [ -z "$(DL)" ];
	then
		sleep 10s
	else
		echo found
fi

hdiutil attach ~/downloads/googlechrome.dmg

sleep 20s

cp -r /Volumes/"google chrome/google chrome.app" /Applications

cd ../../..
diskutil unmount /Volumes/"Google Chrome"
