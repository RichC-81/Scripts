S()
{
#	cd downloads
	find "Sequel-Pro-1.1.2.dmg"
}

###---download and install sequelpro---###

#echo downloading SequelPro
open https://sequelpro.com/download#auto-start
sleep 10s

cd Downloads

until [ $(S) = "Sequel-Pro-1.1.2.dmg" ]
	do
		sleep 10s
	done

echo Installing...
echo
open ~/downloads/sequel-pro-*****.dmg
sleep 10s

cp -r /Volumes/"Sequel Pro 1.1.2/Sequel Pro.app" /Applications

cd ../../..
diskutil unmount /Volumes/"Sequel Pro 1.1.2"
